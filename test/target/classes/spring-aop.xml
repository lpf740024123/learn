<?xml version="1.0" encoding="UTF-8"?>
<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
                        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd  
                        http://www.springframework.org/schema/aop
                        http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
                        "
	>
	<bean id="baseDataSourceHandler" class="com.base.aop.DataSourceHandler"/>
	
	<aop:config>
		切换base数据源
		<aop:aspect id="cutBaseDataSource" ref="baseDataSourceHandler">
			<aop:pointcut id="cutBase" expression="execution(* com.base.dao.*Mapper.*(..))"/>
			<aop:before pointcut-ref="cutBase" method="before"/>
		</aop:aspect>
	</aop:config>

</beans>